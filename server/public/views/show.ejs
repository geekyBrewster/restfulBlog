<% include partials/header %>

<% blogs.forEach(function(blog){ %>
<div class="ui main text container segment">
  <div class="ui huge header"> <%= blog.title %> </div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image_url %>">
    </div>
    <div class="content">
      <h3><%= blog.created.toDateString() %></h3>
    </div>
    <div class="description">
      <p><%= blog.blog_post%></p>
    </div>
  </div>
  <a href="/blogs/<%= blog.id %>/edit" class="ui violet big basic button">Edit Post</a>
</div>
<% }) %>

<% include partials/footer %>
