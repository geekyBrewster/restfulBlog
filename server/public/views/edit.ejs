<% include partials/header %>

<% blog.forEach(function(blog){ %>
<div class="ui main text container segment">
  <div class="ui huge header"> Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
      <div class="fields">
        <label>Title:</label>
        <input type="text" name="title" value="<%= blog.title %>">
      </div>
      <div class="fields">
        <label>Image:</label>
        <input type="text" name="image_url" value="<%= blog.image_url %>">
      </div>
      <div class="fields">
        <label>Post:</label>
        <textarea name="blog_post" rows="5" cols="40"><%= blog.blog_post %></textarea>
      </div>
        <input type="submit" name="submit" value="Submit" class="ui violet big basic button">
    </form>
  </div>
</div>
<% }) %>

<% include partials/footer %>
